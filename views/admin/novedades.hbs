<div class="container htext align-items:top;">
    {{!-- fila 1 --}}
    <div class="row" style="text-align: right;">
        <div class="col-md-7 offset-md-5">
            <p class="text-end">
            <h2>Hola {{persona}}!</h2> <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesión<i
                    class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    {{!-- FIN fila 1 --}}
    {{!--inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top: 0px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!-- FIN fila 2 --}}
    {{!--inicio fila 3 --}}
    <div class="row" style="margin:auto; padding-top:1rem">
        <div class="col">
            <table class="table table-bordered htext">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>