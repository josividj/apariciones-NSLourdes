<div class="container cardcontain" style="margin: 100px auto;">
    <div class="row">
        <div class="col-10 offset-1">
            <h3 class="htext" style="text-align: center;">Modificar una Novedad</h3>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" class="form-control">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>